<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="itson.sushivan.PerfilActivity"
    android:id="@+id/coord_layout">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:layout_marginBottom="16dp"
                android:hint="Nombre"
                android:id="@+id/nombre_perfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"/>

            <EditText
                android:layout_marginBottom="16dp"
                android:hint="Dirección"
                android:id="@+id/direccion_perfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_marginBottom="16dp"
                android:hint="Teléfono"
                android:id="@+id/telefono_perfil"
                android:inputType="phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_marginBottom="16dp"
                android:hint="Email"
                android:id="@+id/email_perfil"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_marginBottom="16dp"
                android:inputType="number"
                android:hint="tarjeta de débito"
                android:id="@+id/cuenta_perfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
